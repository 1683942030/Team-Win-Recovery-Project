<?xml version="1.0"?>

<recovery>
    <resources>
        <resource name="header" type="font" filename="bluehighway-80" />
        <resource name="UItext" type="font" filename="bluehighway-25" />
        <resource name="filelist" type="font" filename="bluehighway-25" />
        <resource name="android" type="image" filename="android" />
        <resource name="main_button" type="image" filename="main_button" />
        <resource name="file_icon" type="image" filename="file" />
        <resource name="folder_icon" type="image" filename="folder" />
        <resource name="slideout" type="image" filename="slideout" />
        <resource name="slidein" type="image" filename="slidein" />
        <resource name="progress" type="animation" filename="indeterminate" />
        <resource name="checkbox_false" type="image" filename="checkbox_empty" />
        <resource name="checkbox_true" type="image" filename="checkbox_checked" />
        <resource name="progress_empty" type="image" filename="progress_empty" />
        <resource name="progress_full" type="image" filename="progress_fill" />
    </resources>

    <pages>
        <page name="main">
            <background color="black" />

            <object type="image">
                <image resource="android" />
                <placement x="10" y="10" />
            </object>

            <object type="text" color="white">
                <font resource="header" />
                <placement x="100" y="15" />
                <text>Recovery</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="20" />
                <text>Team Win Recovery Project (twrp)  v%version%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="50" />
                <text>Based on Android System Recovery   #blameshift edition</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="75" />
                <text>Battery Level: %battery%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="650" y="75" />
                <text>%time%</text>
            </object>

            <object type="button">
                <placement x="20" y="150" />
                <font resource="UItext" color="black" />
                <text>Install</text>
                <image resource="main_button" />
                <action function="page">install</action>
            </object>

            <object type="button">
                <placement x="268" y="150" />
                <font resource="UItext" color="black" />
                <text>Backup/Restore</text>
                <image resource="main_button" />
                <action function="page">nandroid</action>
            </object>

            <object type="button">
                <placement x="516" y="150" />
                <font resource="UItext" color="black" />
                <text>Wipe</text>
                <image resource="main_button" />
                <action function="page">wipe</action>
            </object>

            <object type="button">
                <placement x="764" y="150" />
                <font resource="UItext" color="black" />
                <text>Advanced</text>
                <image resource="main_button" />
                <action function="page">install</action>
            </object>

            <object type="button">
                <placement x="20" y="350" />
                <font resource="UItext" color="black" />
                <text>Mount</text>
                <image resource="main_button" />
                <action function="page">mount</action>
            </object>

            <object type="button">
                <placement x="268" y="350" />
                <font resource="UItext" color="black" />
                <text>Mount USB Storage</text>
                <image resource="main_button" />
                <action function="page">usbmount</action>
            </object>

            <object type="button">
                <placement x="516" y="350" />
                <font resource="UItext" color="black" />
                <text>Reboot</text>
                <image resource="main_button" />
                <action function="page">reboot</action>
            </object>

            <object type="button">
                <placement x="764" y="350" />
                <font resource="UItext" color="black" />
                <text>Settings</text>
                <image resource="main_button" />
                <action function="reload">settings</action>
            </object>
        </page>

        <page name="install">
            <background color="black" />

            <object type="image">
                <image resource="android" />
                <placement x="10" y="10" />
            </object>

            <object type="text" color="white">
                <font resource="header" />
                <placement x="100" y="15" />
                <text>Recovery</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="20" />
                <text>Team Win Recovery Project (twrp)  v%version%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="50" />
                <text>Based on Android System Recovery   #blameshift edition</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="75" />
                <text>Battery Level: %battery%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="650" y="75" />
                <text>%time%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="150" y="150" />
                <text>Please select a file to flash</text>
            </object>

            <object type="fileselector">
                <placement x="20" y="175" w="482" h="195" />
                <icon folder="folder_icon" file="file_icon" />
                <background color="#303030" />
                <font resource="fixed" spacing="15" color="white" />
                <filter folders="1" files="0" />
                <path name="wd" default="/sdcard" />
            </object>

            <object type="fileselector">
                <placement x="522" y="175" w="482" h="195" />
                <icon folder="folder_icon" file="file_icon" />
                <background color="#303030" />
                <font resource="fixed" spacing="15" color="white" />
                <filter extn=".zip" folders="0" files="1" />
                <path name="wd" />
                <data name="filename" />
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="20" y="375" />
                <text>Current Selection: %filename%</text>
            </object>

            <object type="button">
                <placement x="20" y="400" />
                <font resource="UItext" color="white" />
                <text>Flash</text>
                <image resource="main_button" />
                <action function="flash">flash_zip</action>
            </object>

            <object type="checkbox">
                <placement x="268" y="430" />
                <font resource="UItext" color="white" />
                <text>Wipe caches</text>
                <data variable="wipe_cache" default="1" />
                <image checked="checkbox_true" unchecked="checkbox_false" />
            </object>

            <object type="checkbox">
                <placement x="268" y="460" />
                <font resource="UItext" color="white" />
                <text>Reboot after flash</text>
                <data variable="reboot_on_success" default="0" />
                <image checked="checkbox_true" unchecked="checkbox_false" />
            </object>

            <object type="checkbox">
                <placement x="268" y="490" />
                <font resource="UItext" color="white" />
                <text>Verify zip file integrity</text>
                <data variable="verify_zip" default="0" />
                <image checked="checkbox_true" unchecked="checkbox_false" />
            </object>

            <object type="checkbox">
                <placement x="268" y="520" />
                <font resource="UItext" color="white" />
                <text>Force MD5 Checksum</text>
                <data variable="force_md5" default="0" />
                <image checked="checkbox_true" unchecked="checkbox_false" />
            </object>

            <object type="action">
                <touch key="back" />
                <action function="page">main</action>
            </object>

            <object type="action">
                <touch key="home" />
                <action function="page">main</action>
            </object>
        </page>

        <page name="reboot">
            <background color="black" />

            <object type="image">
                <image resource="android" />
                <placement x="10" y="10" />
            </object>

            <object type="text" color="white">
                <font resource="header" />
                <placement x="100" y="15" />
                <text>Recovery</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="20" />
                <text>Team Win Recovery Project (twrp)  v%version%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="50" />
                <text>Based on Android System Recovery   #blameshift edition</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="75" />
                <text>Battery Level: %battery%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="650" y="75" />
                <text>%time%</text>
            </object>

            <object type="button">
                <placement x="20" y="150" />
                <font resource="font1" color="black" />
                <text>Android</text>
                <image resource="main_button" />
                <action function="reboot">system</action>
            </object>

            <object type="button">
                <placement x="268" y="150" />
                <font resource="font1" color="black" />
                <text>Power Off</text>
                <image resource="main_button" />
                <action function="reboot">poweroff</action>
            </object>

            <object type="button">
                <placement x="20" y="350" />
                <font resource="font1" color="black" />
                <text>Recovery</text>
                <image resource="main_button" />
                <action function="reboot">recovery</action>
            </object>

            <object type="button">
                <placement x="268" y="350" />
                <font resource="font1" color="black" />
                <text>Bootloader</text>
                <image resource="main_button" />
                <action function="reboot">bootloader</action>
            </object>

            <object type="action">
                <touch key="home" />
                <action function="page">main</action>
            </object>

            <object type="action">
                <touch key="back" />
                <action function="page">main</action>
            </object>
        </page>

        <page name="flash_zip">
            <background color="black" />

            <object type="console">
                <placement x="0" y="0" w="1024" h="540" />
                <color foreground="#B0B0B0" background="black" scroll="black" />
                <font resource="fixed" />
            </object>

            <object type="progressbar">
                <placement x="386" y="560" />
                <resource  empty="progress_empty" full="progress_full" />
                <data name="ui_progress" />
            </object>

            <object type="animation">
                <placement x="386" y="560" />
                <resource name="progress" />
                <speed fps="15" render="2" />
                <loop frame="1" />
            </object>

            <object type="action">
                <data name="ui_progress" value="100" />
                <action function="page">flash_done</action>
            </object>
        </page>

        <page name="flash_done">
            <background color="black" />

            <object type="console">
                <placement x="0" y="0" w="1024" h="370" />
                <color foreground="#B0B0B0" background="black" scroll="black" />
                <font resource="fixed" />
            </object>

            <object type="button">
                <placement x="392" y="400" />
                <font resource="UItext" color="white" />
                <text>Main Menu</text>
                <image resource="main_button" />
                <action function="page">main</action>
            </object>
        </page>

        <page name="wipe">
            <background color="black" />

            <object type="console">
                <slideout resource="slideout" x="482" y="560" />
                <placement x="0" y="0" w="1024" h="600" />
                <color foreground="#B0B0B0" background="black" scroll="black" />
                <font resource="fixed" />
            </object>

            <object type="image">
                <image resource="android" />
                <placement x="10" y="10" />
            </object>

            <object type="text" color="white">
                <font resource="header" />
                <placement x="100" y="15" />
                <text>Recovery</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="20" />
                <text>Team Win Recovery Project (twrp)  v%version%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="50" />
                <text>Based on Android System Recovery   #blameshift edition</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="400" y="75" />
                <text>Battery Level: %battery%</text>
            </object>

            <object type="text" color="white">
                <font resource="UItext" />
                <placement x="650" y="75" />
                <text>%time%</text>
            </object>

            <object type="button">
                <placement x="20" y="150" />
                <font resource="UItext" color="black" />
                <text>Cache</text>
                <image resource="main_button" />
                <action function="wipe">/cache</action>
            </object>

            <object type="button">
                <placement x="268" y="150" />
                <font resource="UItext" color="black" />
                <text>Dalvik Cache</text>
                <image resource="main_button" />
                <action function="wipe">/cache</action>
            </object>

            <object type="action">
                <touch key="home" />
                <action function="page">main</action>
            </object>

            <object type="action">
                <touch key="back" />
                <action function="page">main</action>
            </object>
        </page>
    </pages>
</recovery>

